{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Nombre de instancia de Data Factory",
			"defaultValue": "adf-ucb-sisinfo-8739694"
		},
		"ls_sa_pizzas_sales_connectionString": {
			"type": "secureString",
			"metadata": "Cadena protegida para \"connectionString\"de \"ls_sa_pizzas_sales\""
		},
		"ls_sql_db_pizzaas_sales_password": {
			"type": "secureString",
			"metadata": "Cadena protegida para \"password\"de \"ls_sql_db_pizzaas_sales\""
		},
		"ls_sql_dw_pizzaas_sales_password": {
			"type": "secureString",
			"metadata": "Cadena protegida para \"password\"de \"ls_sql_dw_pizzaas_sales\""
		},
		"ls_sql_db_pizzaas_sales_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "sql-ucb-sisinfo-8739694.database.windows.net"
		},
		"ls_sql_db_pizzaas_sales_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "db_pizzas_sales"
		},
		"ls_sql_db_pizzaas_sales_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "aldrin"
		},
		"ls_sql_dw_pizzaas_sales_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "sql-ucb-sisinfo-8739694.database.windows.net"
		},
		"ls_sql_dw_pizzaas_sales_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "Dw_Pizzas_Sales"
		},
		"ls_sql_dw_pizzaas_sales_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "aldrin"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/order_details_csv')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ls_sa_pizzas_sales",
					"type": "LinkedServiceReference"
				},
				"folder": {
					"name": "DB"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "order_details.csv",
						"container": "pizzas-sales"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "order_details_id",
						"type": "String"
					},
					{
						"name": "order_id",
						"type": "String"
					},
					{
						"name": "pizza_id",
						"type": "String"
					},
					{
						"name": "quantity",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ls_sa_pizzas_sales')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/orders_csv')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ls_sa_pizzas_sales",
					"type": "LinkedServiceReference"
				},
				"folder": {
					"name": "DB"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "orders.csv",
						"container": "pizzas-sales"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "order_id",
						"type": "String"
					},
					{
						"name": "date",
						"type": "String"
					},
					{
						"name": "time",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ls_sa_pizzas_sales')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/pizza_types_csv')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ls_sa_pizzas_sales",
					"type": "LinkedServiceReference"
				},
				"folder": {
					"name": "DB"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "pizza_types.csv",
						"container": "pizzas-sales"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "pizza_type_id",
						"type": "String"
					},
					{
						"name": "name",
						"type": "String"
					},
					{
						"name": "category",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ls_sa_pizzas_sales')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/pizzas_csv')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ls_sa_pizzas_sales",
					"type": "LinkedServiceReference"
				},
				"folder": {
					"name": "DB"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "pizzas.csv",
						"container": "pizzas-sales"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "pizza_id",
						"type": "String"
					},
					{
						"name": "pizza_type_id",
						"type": "String"
					},
					{
						"name": "size",
						"type": "String"
					},
					{
						"name": "price",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ls_sa_pizzas_sales')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ls_sa_pizzas_sales')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('ls_sa_pizzas_sales_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/ls_sql_db_pizzaas_sales')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"server": "[parameters('ls_sql_db_pizzaas_sales_properties_typeProperties_server')]",
					"database": "[parameters('ls_sql_db_pizzaas_sales_properties_typeProperties_database')]",
					"encrypt": "mandatory",
					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('ls_sql_db_pizzaas_sales_properties_typeProperties_userName')]",
					"password": {
						"type": "SecureString",
						"value": "[parameters('ls_sql_db_pizzaas_sales_password')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/ls_sql_dw_pizzaas_sales')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"server": "[parameters('ls_sql_dw_pizzaas_sales_properties_typeProperties_server')]",
					"database": "[parameters('ls_sql_dw_pizzaas_sales_properties_typeProperties_database')]",
					"encrypt": "mandatory",
					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('ls_sql_dw_pizzaas_sales_properties_typeProperties_userName')]",
					"password": {
						"type": "SecureString",
						"value": "[parameters('ls_sql_dw_pizzaas_sales_password')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}